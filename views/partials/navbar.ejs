<!-- Komponent nawigacji - wielokrotnego użytku -->
<header class="navbar">
    <div class="container navbar-container">
        <div class="nav-brand">
            <a href="/">MadeByU</a>
        </div>

        <!-- Wyszukiwarka -->
        <div class="search-container">
            <form class="search-form" action="/search" method="GET">
                <input 
                    type="text" 
                    name="q" 
                    class="search-input" 
                    placeholder="Szukaj rękodzieł..."
                    autocomplete="off"
                >
                <button type="submit" class="search-button" aria-label="Szukaj">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                </button>
            </form>
        </div>

        <nav class="nav-menu">
            <a href="/">Strona Główna</a>
            <a href="/products">Produkty</a>
            
            <!-- Rozwijane menu kategorii -->
            <div class="nav-dropdown">
                <a href="/categories" class="dropdown-toggle">
                    Kategorie
                    <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
                        <path d="M6 9L1 4h10z"></path>
                    </svg>
                </a>
                <div class="dropdown-menu">
                    <div class="dropdown-content">
                        <div class="category-column">
                            <a href="/categories/ceramika" class="category-main">Ceramika</a>
                            <a href="/categories/ceramika/naczynia" class="category-sub">Naczynia</a>
                            <a href="/categories/ceramika/wazony" class="category-sub">Wazony</a>
                            <a href="/categories/ceramika/figurki" class="category-sub">Figurki</a>
                        </div>
                        <div class="category-column">
                            <a href="/categories/bizuteria" class="category-main">Biżuteria</a>
                            <a href="/categories/bizuteria/naszyjniki" class="category-sub">Naszyjniki</a>
                            <a href="/categories/bizuteria/bransoletki" class="category-sub">Bransoletki</a>
                            <a href="/categories/bizuteria/kolczyki" class="category-sub">Kolczyki</a>
                        </div>
                        <div class="category-column">
                            <a href="/categories/drewno" class="category-main">Drewno</a>
                            <a href="/categories/drewno/deski" class="category-sub">Deski do krojenia</a>
                            <a href="/categories/drewno/skrzynki" class="category-sub">Skrzynki</a>
                            <a href="/categories/drewno/dekoracje" class="category-sub">Dekoracje</a>
                        </div>
                        <div class="category-column">
                            <a href="/categories/tekstylia" class="category-main">Tekstylia</a>
                            <a href="/categories/tekstylia/szale" class="category-sub">Szale</a>
                            <a href="/categories/tekstylia/torby" class="category-sub">Torby</a>
                            <a href="/categories/tekstylia/poduszki" class="category-sub">Poduszki</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/dashboard">Moje Konto</a>
                <a href="/logout" class="btn-logout">Wyloguj</a>
            <% } else { %>
                <a href="/login" class="btn-login">Zaloguj się</a>
            <% } %>
        </nav>
    </div>
</header>
