<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main>
        <!-- Sekcja Hero -->
        <section class="hero">
            <div class="container">
                <h1>Witaj w MadeByU</h1>
                <p class="hero-subtitle">Marketplace unikalnych rekodziel od polskich tworcow</p>
                <div class="hero-buttons">
                    <a href="/products" class="btn btn-primary">Przegladaj Produkty</a>
                    <a href="/sell" class="btn btn-secondary">Zacznij Sprzedawac</a>
                </div>
            </div>
        </section>

        <!-- Wyrozniajace sie produkty -->
        <section class="featured-products">
            <div class="container">
                <h2>Wybor Redakcji</h2>
                <div class="products-grid">
                    <!-- Przykladowe produkty - pozniej z bazy danych -->
                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1578749556568-bc2c40e68b61?w=600&h=600&fit=crop" alt="Ceramiczna miska">
                            <span class="badge">Wybor Redakcji</span>
                        </div>
                        <div class="product-info">
                            <h3>Rekodzielona miska ceramiczna</h3>
                            <p class="product-price">50.00 zl</p>
                            <p class="product-seller">Sprzedawca: Kasia</p>
                            <button class="btn btn-small" onclick="addToCart(1)">Dodaj do koszyka</button>
                        </div>
                    </div>

                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1565183928294-7d22f6518a02?w=600&h=600&fit=crop" alt="Drewniana deska">
                        </div>
                        <div class="product-info">
                            <h3>Drewniana deska do krojenia</h3>
                            <p class="product-price">120.00 zl</p>
                            <p class="product-seller">Sprzedawca: Marek</p>
                            <button class="btn btn-small" onclick="addToCart(2)">Dodaj do koszyka</button>
                        </div>
                    </div>

                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=600&h=600&fit=crop" alt="Bizuteria srebrna">
                            <span class="badge">Nowosc</span>
                        </div>
                        <div class="product-info">
                            <h3>Rekodzielna bizuteria srebrna</h3>
                            <p class="product-price">85.00 zl</p>
                            <p class="product-seller">Sprzedawca: Anna</p>
                            <button class="btn btn-small" onclick="addToCart(3)">Dodaj do koszyka</button>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- Kategorie -->
<section class="categories-section">
    <div class="container">
        <h2>Kategorie Produktow</h2>
        <div class="categories-grid">
            <div class="category-card">
                <h3>Ceramika</h3>
                <p>Miseczki, talerze, wazony</p>
            </div>
            <div class="category-card">
                <h3>Bizuteria</h3>
                <p>Naszyjniki, bransoletki, kolczyki</p>
            </div>
            <div class="category-card">
                <h3>Drewno</h3>
                <p>Deski, skrzynki, dekoracje</p>
            </div>
            <div class="category-card">
                <h3>Tekstylia</h3>
                <p>Szale, torby, poduszki</p>
            </div>
        </div>
    </div>
</section>
